{
  "name": "rd-vision-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for RD Vision services and packages.",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -r --parallel --filter ./services/* start:dev",
    "build": "pnpm -r --filter ./packages/* --filter ./services/* build",
    "start": "pnpm -r --filter ./services/* start",
    "clean": "pnpm -r run clean"
  },
  "keywords": [
    "rd-vision",
    "rd",
    "vision",
    "ai",
    "artificial-intelligence"
  ],
