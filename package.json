  "license": "ISC",
  "packageManager": "pnpm@10.16.1",
  "private": "true",
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "jest": "^30.1.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2"
  }
}
